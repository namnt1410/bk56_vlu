<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "KENTO", home_path, id: "logo" %>
    <form class="navbar-form pull-left" role="search">
      <div class="input-group" id="search_bar">
        <input type="text" class="form-control" placeholder="Search KENTO" size="25">
          <div class="input-group-btn">
            <button type="submit" class="btn btn-default">
            <span class="glyphicon glyphicon-search"></span>
            </button>
          </div>
      </div>
    </form>
    <nav>
      <ul class="nav navbar-nav">
        <li><%= link_to "Home",   home_path %></li>
        <li><%= link_to "Questions", questions_path %></li>
        <li><%= link_to "Help",   help_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag current_user.gravatar_url , width: 25 %>
              <%= current_user.email %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to " Profile" , current_user, class: "glyphicon glyphicon-user" %></li>
              <li><%= link_to " Settings", edit_user_registration_path, class: "glyphicon glyphicon-pencil" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to " Log out", destroy_user_session_path,  class: "glyphicon glyphicon-log-out", method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign up", new_user_registration_path  %></li>
          <li><%= link_to "Log in", new_user_session_path  %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>